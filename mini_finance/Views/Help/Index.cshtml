@model List<FAQViewModel>
@{
    ViewData["Title"] = "Help Center";
}

<div class="title-group mb-3">
    <h1 class="h2 mb-0">Help Center</h1>
    <small class="text-muted">Find answers to frequently asked questions</small>
</div>

<div class="row my-4">
    <div class="col-lg-8 col-12">
        <div class="custom-block bg-white">
            <h5 class="mb-4">Frequently Asked Questions</h5>

            <div class="accordion" id="faqAccordion">
                @for (int i = 0; i < Model.Count; i++)
                {
                    var faq = Model[i];
                    <div class="accordion-item custom-block-faq">
                        <h2 class="accordion-header" id="heading@(i)">
                            <button class="accordion-button @(i != 0 ? "collapsed" : "")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(i)" aria-expanded="@(i == 0 ? "true" : "false")" aria-controls="collapse@(i)">
                                @faq.Question
                            </button>
                        </h2>
                        <div id="collapse@(i)" class="accordion-collapse collapse @(i == 0 ? "show" : "")" aria-labelledby="heading@(i)" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                <p>@faq.Answer</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="custom-block bg-white">
            <h5 class="mb-4">Still Need Help?</h5>
            <p>Can't find what you're looking for? Contact our support team and we'll get back to you as soon as possible.</p>
            
            <form class="custom-form">
                <div class="row">
                    <div class="col-md-6 col-12">
                        <input type="text" class="form-control" placeholder="Your Name" required>
                    </div>
                    <div class="col-md-6 col-12">
                        <input type="email" class="form-control" placeholder="Your Email" required>
                    </div>
                    <div class="col-12">
                        <input type="text" class="form-control" placeholder="Subject" required>
                    </div>
                    <div class="col-12">
                        <textarea class="form-control" rows="5" placeholder="Describe your issue..." required></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn custom-btn">Send Message</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="col-lg-4 col-12">
        <div class="custom-block bg-white">
            <h5 class="mb-4">Quick Links</h5>
            <div class="d-grid gap-2">
                <a href="#" class="btn custom-border-btn">User Guide</a>
                <a href="#" class="btn custom-border-btn">Video Tutorials</a>
                <a href="#" class="btn custom-border-btn">Security Tips</a>
                <a href="#" class="btn custom-border-btn">API Documentation</a>
            </div>
        </div>

        <div class="custom-block custom-block-contact bg-white">
            <h5 class="mb-4">Contact Information</h5>
            <p><i class="bi-envelope me-2"></i><a href="mailto:support@minifinance.com">support@minifinance.com</a></p>
            <p><i class="bi-telephone me-2"></i><a href="tel:+18003462623">+1-800-FINANCE</a></p>
            <p><i class="bi-clock me-2"></i>24/7 Support Available</p>
            <p><i class="bi-geo-alt me-2"></i>123 Finance Street<br>Money City, FC 12345</p>
        </div>
    </div>
</div> 